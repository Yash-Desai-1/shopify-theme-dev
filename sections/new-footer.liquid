      </div>

    {% else %}
      {% comment %}
        <div>
          {% for block in section.blocks %}
            <li>
              <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
            </li>
          {% endfor %}
        </div>
      {% endcomment %}
      {% for block in section.blocks %}
        <div class="atag">
          <li>
            <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
          </li> 
         
        </div>
      {% endfor %}
    {% endif %}
  </div>
  <div class="footer-sec-2">
    <p>Guides</p>
    <p>Terms of Sale</p>
    <p>Terms of Use</p>
    <p>Privacy Policy</p>
  </div>
</footer>

<style>
  .footer-main {
    background: {{ section.settings.background }};
    color: {{ section.settings.text-color }};
    padding: 10px;
    display:flex;
    justify-content:space-evenly;
  }
  .footer-sec-1 {
    margin-top: 20px;
    display: flex;
    justify-content: space-around;
  }
  .atag{
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    flex-wrap: wrap;
    width: 100%;
    list-style: none;
  }

  .footer-sec-2 {
    display: flex;
    flex-direction: column;
  }
  .footer-sec-2 p {
    padding: 10px
  }
  a{
    text-decoration: none;
    color: white;
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text-color",
      "label": "Text",
      "default": "#F4F4F4"
    }
  ],
  "blocks": [
    {
      "name": "Links",
      "type": "links",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "footer"
    }
  ]
}
{% endschema %}