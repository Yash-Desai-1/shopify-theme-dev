<footer class="footer-main">
    <div class="footer-sec-1">
      {% if block in section.blocks == 0 %}
 

        {%else%}
        {%for block in section.blocks %}
         <li>{{block.settings.txt |  link_to: block.settings.url}}</li>

        {%endfor%}
      {%endif%}

    </div>
    <div class="footer-sec-2">

    </div>
</footer>


{%  schema  %} 
{
    "name":"new-footer",
    "settings": [{
        "type": "color",
        "id": "txtcol",
        "label": "text color",
        "default": "#000000"
    },
  {
    "type": "color",
    "id":"bgcol",
    "label": "Background Color",
    "default": "#f4f4f4"
  }
],
"blocks": [
    {
        "name": "links",
        "type": "links",
        "settings": [{
            "type": "text",
             "id": "txt",
             "label": "Text"
        },
    {
        "type": "url",
         "id": "url",
         "label": "Link"
    }]
    }
],
"presets": [{
    "name": "New Footer"
}]
}

{% endschema %} 