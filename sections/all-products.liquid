<section class="all-products">
    <h1> {{collections['first'].title}}</h1>
    <div class="product-container">
        <div class="all-products-wrapper">
            <div class="product-card">

                {%for product in collections['first'].products %}
                <h3>{{ product.title |  link_to: product.url}}</h3>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
<style>
    .all-products{
        background-color: {{ section.settings.bgcolor  }};
        color:{{ section.settings.txtcolor }};
        padding:0.6rem;
    }
    .product-container{
        display: flex;
        overflow-x:scroll;
    }
    .product-container::-webkit-scrollbar{
        display: none;
    }
    .all-products-wrapper{
        display: flex;
        transition: transform 0.3 ease;
    }
    .product-card{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding:0.5rem;
    }

    .product-card h3 a{
        color:black;
        text-decoration: none;
        font-weight: bold;
    }
    .product-card a:hover{
        text-decoration: underline;
    }
</style>

{% schema  %}
{
    "name":"all-products",
    "settings": [{
        "type":"color",
        "id": "txtcolor",
        "label": "text color",
         "default": "#000000"
    },
    {
        "type": "color",
         "id":"bgcolor",
         "label": "Background Color",
         "default": "#f4f4f4"
    }],
    "presets": [{
        "name":"all-products"
    }]
}
{% endschema %}