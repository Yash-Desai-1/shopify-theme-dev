{% schema %}
  {
    "name": "AnnouncementBar",
    "settings": [
      {
        "type": "checkbox",
        "id": "show-announcement",
        "label": "Show Announcement",
        "default": true
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Pick a image",
        "info": "Png Image is recommended"

      }, {
        "type": "image_picker",
        "id": "secondImage",
        "label": "Pick a image"
      },{
        "type": "color",
        "id": "background",
        "label": "background color",
        "default":"#f4f4f4"
      },
      {
        "type": "color",
          "id":"textcolor",
          "label": "textcolor",
          "default":"#000000"
      }
    ],
    "blocks": [{
      "name": "Links",
      "type": "links",
      "limit": 4,
      "settings": [{
        "type": "text",
        "id": "text",
        "label": "Text",
        "default":"Link"
      },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }]
    }],

    "presets": []
  }
{% endschema %}
<style>
  .announcement-bar{
    background-color: {{section.settings.background}};
    color:{{section.settings.textcolor}};
    display:flex;
    justify-content:space-between;
    align-items:center;
    padding: 0 30px;
  }
 ul>li{
  list-style: none;
 }
  a{
    text-decoration: none;

  }
  .announce-right{
    display: flex;
    margin-right:1rem;
  }
</style>
{% if section.settings.show-announcement %}
  <section>
    <div class="announcement-bar">
      <div class="announce-left">

        {% if section.settings.image != blank %}
          <img
            width="40"
            height="40"
            loading="lazy"
            src="{{section.settings.image | image_url }}">
        {% else %}

          <img
            width="40"
            height="40"
            loading="lazy"
            src="{{ 'a.png' | asset_url }}">
        {% endif %}
        {% if section.settings.secondImage != blank %}
          <img
            width="40"
            height="40"
            loading="lazy"
            src="{{ section.settings.secondImage | image_url }}">
        {% else %}

          <img
            width="40"
            height="40"
            loading="lazy"
            src="{{ 'b.png' | asset_url }}">
        {% endif %}

      </div>
      <div class="announce-right">

       <ul class="announce-right">
        {%if section.blocks.size == 0 %}
          <li>
            <a href="#" >Help</a>
          </li>
          {%if shop.customer_accounts_enabled%}
            {% if customer %}
              <li>
                <a href="/account">Account</a>
                </li>
                {% else %}
                <li>
                  <a href="/account/login">Sign In</a>
                  </li>
              {% endif %}
          {%endif%}
{%else%}

{%for block in section.blocks%}
        <li>
          <a href="{{block.settings.link}}">{{block.settings.text}}</a>
        </li>

  {%endfor%}
        {%endif%}

       </ul>

      </div>
    </div>
  </section>

{% endif %}