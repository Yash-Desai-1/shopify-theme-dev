<section class="all-collections">
  <h1>Featured Collections</h1>
  <div class="collection-container">
    <div class="collection-wrapper">
      {% for collection in collections %}
        <div class="collection-card">
          <img
            height="300"
            width="300"
            loading="lazy"
            src="{{ collection.featured_image | image_url}}">
          <h3>{{ collection.title }}</h3>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
<style>
    .all-collections{
        background-color: {{ section.settings.bgcol }};
        color:{{ section.settings.txtcol }};
        padding:0.6rem;
    }
    .collection-container{
        position:relative;
        overflow-x:scroll;
        
    }
    .collection-container::-webkit-scrollbar {
  display: none;
}
    .collection-wrapper{
        display: flex;
        transition: transform 0.3s ease;
    }
    .collection-card{
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 0.6rem;
        box-sizing:border-box;
    }
    .collection-card h3 a{
        color:black;
        text-decoration: none;
        font-weight: bold;
    }
    .collection-card a:hover{
        text-decoration: underline;
    }
</style>

{% schema %}
  {
    "name": "all-collections",
    "settings": [
      {
        "type": "text",
        "id": "text",
        "label": "txt"
      }, {
        "type": "color",
        "id": "bgcol",
        "label": "Background color",
        "default": "#f4f4f4"
      }, {
        "type": "color",
        "id": "txtcol",
        "label": "txt color",
        "default": "#000000"
      }

    ],
    "presets": [
      {
        "name": "all-collections"
      }
    ]
  }
{% endschema %}